<% if current_user && !current_user.verifiable? %>
  <div class="reveal__header missing-confirmation">
    <h3 class="reveal__title"><%= t "decidim.authorization_modals.content.unconfirmed.title" %></h3>
  </div>
  <p><%= t "decidim.authorization_modals.content.unconfirmed.explanation_html", email: current_user.email %></p>
  <p><%= t "decidim.authorization_modals.content.unconfirmed.confirmation_instructions" %></p>
  <div class="row">
    <div class="columns medium-8 medium-offset-2">
      <%= link_to t("decidim.authorization_modals.content.unconfirmed.request_confirmation_instructions"), new_confirmation_path(Decidim::User), class: "button expanded" %>
    </div>
  </div>
<% else %>
  <div class="reveal__header missing-authorization">
    <h3 class="reveal__title"><%= t "decidim.authorization_modals.content.missing.title" %></h3>
  </div>
<% end %>
