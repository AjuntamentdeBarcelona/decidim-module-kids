<div class="border-2 rounded border-background p-4 form__wrapper mt-8 first:mt-0 last:pb-4">
  <h3 class="h4"><%= t "minors_participation", scope: "decidim.kids" %></h3>

  <div class="field">
    <%= f.check_box :enable_minors_participation %>
  </div>

  <div class="field">
    <%= f.number_field :minimum_minor_age %>
  </div>

  <div class="field">
    <%= f.number_field :maximum_minor_age %>
  </div>

  <div class="field">
    <%= f.number_field :maximum_minor_accounts %>
  </div>

  <div class="field">
    <%= f.select :minors_authorization, Decidim::Kids.valid_minor_workflows.pluck(:description, :name) %>
    <p class="help-text"><%= t ".minors_authorization_help" %></p>
  </div>

  <div class="field">
    <%= f.select :tutors_authorization, Decidim::Kids.valid_tutor_workflows.pluck(:description, :name) %>
    <p class="help-text"><%= t ".tutors_authorization_help" %></p>
  </div>
</div>
